{
  "properties": [
    {
      "name": "alim.request-logging-filter.enabled",
      "type": "java.lang.Boolean",
      "description": "HttpStatusCodeBasedRequestLoggingFilter 활성화 여부",
      "defaultValue": true
    },
    {
      "name": "alim.request-logging-filter.include-query-string",
      "type": "java.lang.Boolean",
      "description": "query string을 포함할 지 여부",
      "defaultValue": true
    },
    {
      "name": "alim.request-logging-filter.include-headers",
      "type": "java.lang.Boolean",
      "description": "header 포함할 지 여부",
      "defaultValue": true
    },
    {
      "name": "alim.request-logging-filter.include-payload",
      "type": "java.lang.Boolean",
      "description": "body 포함할 지 여부",
      "defaultValue": true
    },
    {
      "name": "alim.request-logging-filter.include-client-info",
      "type": "java.lang.Boolean",
      "description": "Client 정보를 포함할 지 여부",
      "defaultValue": true
    },
    {
      "name": "alim.request-logging-filter.max-payload-length",
      "type": "java.lang.Integer",
      "description": "log를 남길 body 길이",
      "defaultValue": 1000000
    },
    {
      "name": "alim.request-logging-filter.after-message-prefix",
      "type": "java.lang.String",
      "description": "로그 메세지 접두사",
      "defaultValue": ""
    },
    {
      "name": "alim.request-logging-filter.after-message-suffix",
      "type": "java.lang.String",
      "description": "로그 메세지 접미사",
      "defaultValue": ""
    },
    {
      "name": "alim.http-status-code-based-request-logging-filter.log-level",
      "type": "com.alim.starter.requestloggingfilter.LogLevel",
      "description": "로그 레벨",
      "defaultValue": "warn"
    },
    {
      "name": "alim.request-logging-filter.conditions.loggable-http-status",
      "type": "java.lang.Integer",
      "description": "로그를 남기기 시작할 status code",
      "defaultValue": 400
    },
    {
      "name": "alim.request-logging-filter.conditions.include-uri-patterns",
      "type": "java.util.List<java.lang.String>",
      "description": "로그를 남길 URI(ant pattern) 목록"
    },
    {
      "name": "alim.request-logging-filter.conditions.exclude-uri-patterns",
      "type": "java.util.List<java.lang.String>",
      "description": "로그를 남기지 않을 URI(ant pattern) 목록"
    }
  ]
}